	<link rel="stylesheet" type="text/css" href="css/main.css">
<!--===============================================================================================-->
</head>
<body>
	{{>cfu}}
	{{>header}}
	<div class="header">
	<a href="/profile" class="logo">SELF SKY</a>
	<div class="header-right">
        <a class="active" href="/profile">profile</a>
	</div>
	</div>
	<div class="contact1">
		<div class="container-contact1">
			<div class="contact1-pic js-tilt" data-tilt>
				<img src="https://www.vippng.com/png/detail/105-1058872_stylish-man-cartoon-vector-character-male-cartoon-characters.png" alt="IMG">
			</div>

			<form class="contact1-form validate-form" action="/updatepeopleform/{{id}}" method="POST">
				<span class="contact1-form-title">
					UPDATE DATA
				</span>

				<div class="wrap-input1 validate-input" data-validate = "Name is required">
					<label for="">name</label>
					<input class="input1" type="text" value={{name}} name="name" placeholder="NAME" required>
					<span class="shadow-input1"></span>
				</div>

				<div class="wrap-input1 validate-input">
					<label for="">phone</label>
					<input class="input1" type="tel" name="phone" value={{phone}} placeholder="Mobile Number" pattern="^\d{10}$" required>
					<span class="shadow-input1"></span>
				</div>

				<div class="wrap-input1 validate-input" data-validate = "email is required">
					<label for="">email</label>
					<input class="input1" type="email" name="email" value={{email}} placeholder="Email Address" required>
					<span class="shadow-input1"></span>
				</div>
                
                <div class="wrap-input1 validate-input">
					<label for="">instagram</label>
					<input class="input1" name="instagram" value={{instagram}} placeholder="instagram account name" required></input>
					<span class="shadow-input1"></span>
				</div>

				<div class="wrap-input1 validate-input">
					<label for="">twiiter</label>
					<input class="input1" name="twitter" value={{twitter}} placeholder="twitter account name" required></input>
					<span class="shadow-input1"></span>
				</div>

				<div class="wrap-input1 validate-input">
					<label for="">github</label>
					<input class="input1" name="github" value={{github}} placeholder="github account name" required></input>
					<span class="shadow-input1"></span>
				</div>

				<div class="wrap-input1 validate-input" data-validate = "address is required">
					<label for="">address</label>
					<textarea class="input1" name="address" placeholder="address" required>{{address}}</textarea>
					<span class="shadow-input1"></span>
				</div>

                

				<div class="container-contact1-form-btn">
					<button class="contact1-form-btn">
						<span>
							Add Information
							<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
						</span>
					</button>
				</div>
			</form>
		</div>
	</div>




<!--===============================================================================================-->
	<script src="vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="vendor/bootstrap/js/popper.js"></script>
