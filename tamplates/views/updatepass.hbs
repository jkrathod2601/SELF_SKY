<body>
	{{>header}}
    {{>cfu}}
    <div class="header">
	<a href="/profile" class="logo">SELF SKY</a>
	<div class="header-right">
        <a class="active" href="/profile">profile</a>
	</div>
	</div>
	<div class="contact1">
		<div class="container-contact1">
			<div class="contact1-pic js-tilt" data-tilt>
				<img src="https://www.vippng.com/png/detail/105-1058872_stylish-man-cartoon-vector-character-male-cartoon-characters.png" alt="IMG">
			</div>

			<form class="contact1-form validate-form" action="/updatepassform/{{id}}" method="POST">
				<span class="contact1-form-title">
					UPDATE PASSWORD
				</span>

                <div class="wrap-input1 validate-input" data-validate = "SiteNamw is required">
					<input class="input1" type="text" name="SiteName" value={{SiteName}} placeholder="Namw of Site" required>
					<span class="shadow-input1"></span>
				</div>

				<div class="wrap-input1 validate-input" data-validate = "UserName is required">
					<input class="input1" type="text" name="username" value={{username}} placeholder="UserName of Site" required>
					<span class="shadow-input1"></span>
				</div>

				<div class="wrap-input1 validate-input">
					<input class="input1" type="text" name="password" value={{password}} placeholder="password" required>
					<span class="shadow-input1"></span>
				</div>

                <div class="wrap-input1 validate-input">
					<input class="input1" type="url" name="Link_Of_Site" value={{Link_Of_Site}} placeholder="Add Link of site" required>
					<span class="shadow-input1"></span>
				</div>


				<div class="container-contact1-form-btn">
					<button class="contact1-form-btn">
						<span>
							Add Password
							<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
						</span>
					</button>
				</div>
			</form>
		</div>
	</div>




