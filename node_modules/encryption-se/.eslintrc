{
  "extends": "airbnb",
  "globals": {
    "describe": "readonly",
    "it": "readonly"
    },
  "plugins": [
    "chai-friendly"
  ],
  "rules": {
    "func-names": ["error", "never"],
    "semi": 2,
    "no-console": "off",
    "jsx-a11y/href-no-hash": "off",
    "no-unused-expressions": 0,
    "chai-friendly/no-unused-expressions": 2,
    "curly": 0,
    "max-len": [1, {"code": 150, "tabWidth": 4, "ignoreUrls": true}]
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  }
}
